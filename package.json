{
  "name": "kola-liberian-languages",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "npm run dev",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:accessibility": "playwright test tests/e2e/accessibility.spec.ts",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "verify-indexes": "tsx scripts/verify-indexes.ts",
    "apply-migration": "tsx scripts/apply-migration.ts",
    "pre-deploy": "tsx scripts/pre-deploy-check.ts",
    "final-check": "tsx scripts/final-deployment-check.ts",
    "verify-deployment": "tsx scripts/verify-deployment-readiness.ts",
    "optimize-images": "tsx scripts/optimize-images.ts",
    "start:all": "bash scripts/start-servers.sh",
    "stop:all": "bash scripts/stop-servers.sh",
    "mobile:build": "tsx scripts/fix-mobile-build.ts && CAPACITOR_BUILD=true npm run build && npx cap sync android",
    "mobile:build:dev": "tsx scripts/fix-mobile-build.ts && npm run build && npx cap sync android",
    "mobile:sync": "npx cap sync android",
    "mobile:open": "npx cap open android",
    "mobile:run": "npm run mobile:build && npm run mobile:open",
    "mobile:run:dev": "npm run dev & npm run mobile:sync && npm run mobile:open",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@capacitor/android": "7.4.4",
    "@capacitor/core": "^7.4.4",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.10.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@sentry/nextjs": "^10.26.0",
    "@tanstack/react-query": "^5.17.0",
    "@tanstack/react-query-devtools": "^5.17.0",
    "bcryptjs": "^3.0.3",
    "canvas-confetti": "^1.9.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "framer-motion": "^11.18.2",
    "gray-matter": "^4.0.3",
    "howler": "^2.2.4",
    "jimp": "^1.6.0",
    "lucide-react": "^0.344.0",
    "next": "^14.2.0",
    "next-auth": "^4.24.5",
    "next-themes": "^0.4.6",
    "openai": "^6.17.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.49.3",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.2.0",
    "web-vitals": "^5.1.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@capacitor/cli": "7.4.4",
    "@chromatic-com/storybook": "^5.0.0",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-a11y": "^10.2.6",
    "@storybook/addon-docs": "^10.2.6",
    "@storybook/addon-onboarding": "^10.2.6",
    "@storybook/addon-vitest": "^10.2.6",
    "@storybook/nextjs": "^10.2.6",
    "@storybook/nextjs-vite": "^10.2.6",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/howler": "^2.2.12",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.17",
    "baseline-browser-mapping": "^2.9.19",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-storybook": "^10.2.6",
    "eslint-plugin-testing-library": "^6.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "pdfkit": "^0.13.0",
    "playwright": "^1.56.1",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "prisma": "^5.10.2",
    "storybook": "^10.2.6",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vercel": "^48.10.5",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
